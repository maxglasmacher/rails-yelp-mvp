<h1><%=@restaurant.name%></h1>
<h2><%= @restaurant.category %></h2>
<%= link_to "Add review", new_restaurant_review_path(@restaurant), class:"btn btn-info"  %>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.content %>
      <%= "*" * review.rating %>
    </li>
  <% end %>
</ul>
<h3><%= @restaurant.address %></h3>
<h3>Call us at: <%= @restaurant.phone_number %></h3>
<%= link_to "HOME", restaurants_path  %>
